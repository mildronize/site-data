---
permalink: "posts/{{page.fileSlug }}.json"
---

{
  "title": "{{ title }}",
  "date": "{{ page.date | dateToISO }}",
  "slug": "{{page.fileSlug }}",
  "categories" : [
  {% for category in categories %}
            {% if category != "posts" %}
                { "name": "{{ category }}", "slug": "{{ category | url }}"}
                {% unless forloop.last %},{% endunless %}
            {% endif %}
        {% endfor %}
    ],
    "tags": [
    {% for tag in tags %}
    {% if tag != "posts" %}
        { "name": "{{ tag }}", "slug": "{{ tag | url }}"}
        {% unless forloop.last %},{% endunless %}
    {% endif %}
{% endfor %}
    ],
  "content": {{ content | convertImageLocation | jsonify }}
}
